<!--                action = {-->
<!--                "type": "ir.actions.act_window",-->
<!--                "view_mode": "tree,form",-->
<!--                "res_model": model._name,-->
<!--                }-->
<!--            </field>-->
<!--        </record>-->


        <!-- Top menu item -->

        <menuitem name="first_mod" id="menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="menu_1" parent="menu_root"/>
        <menuitem name="Menu 2" id="menu_2" parent="menu_root"/>

        <!-- actions -->

        <menuitem name="List" id="menu_1_list" parent="menu_1"
                  action="first_mod_action_window"/>
<!--        <menuitem name="Server to list" id="first_mod_menu" parent="first_mod.menu_2"-->
<!--                  action="first_mod.action_server"/>-->

        <menuitem name="sunny" id="first_modd" parent="menu_root"
                  action="first_mod_added_wiz"/>

    </data>
</odoo>
