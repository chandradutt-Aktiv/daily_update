<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="first_mod.list">
            <field name="name">first_mod list</field>
            <field name="model">first_mod.first_mod</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" widget="name" use="required"/>
                    <field name="id" placeholder="enter id" use="required"/>
<!--                    <field name="email" widget="email"/>-->
                    <field name="value2"/>
<!--                    <field name="city"/>-->
                    <field name="date"/>
                    <field name="time"/>
                    <field name="selection"/>
                    <field name="addimage" widget="image"/>
                    <field name="anhtml"/>
                    <field name="gender" widget="radio"/>
                </tree>
<!--                <button name="open wizard"/>-->
            </field>
        </record>

        <record model="ir.ui.view" id="first_mod.form">
            <field name="name">first_mod form</field>
            <field name="model">first_mod.first_mod</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" widget="name" use="required"/>
                            <field name="id" placeholder="enter id" use="required"/>
                            <field name="email" widget="email"/>
                            <field name="value2"/>
                            <field name="city"/>
                            <field name="date"/>
                            <field name="time"/>
                            <field name="selection"/>
                            <field name="addimage" widget="image"/>
                            <field name="anhtml"/>
                            <field name="gender" widget="radio"/>
<!--                            <field name="customer_rank" widget="many2many"/>-->
                            <button name="openwizard" string="open wizard button" type="object"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="first_mod_action_window">
            <field name="name">first_mod window</field>
            <field name="res_model">first_mod.first_mod</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->

<!--        <record model="ir.actions.server" id="first_mod.action_server">-->
<!--            <field name="name">first_mod server</field>-->
<!--            <field name="model_id" ref="model_first_mod_first_mod"/>-->
