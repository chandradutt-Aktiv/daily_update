<odoo>
    <data noupdate="1">
        <record id="mail_template_demo" model="mail.template">
            <field name="name">hospital Patient</field>
            <field name="model_id" ref="hospital_m.model_hospital_m_hospital_m"/>
            <field name="email_from">{{user.email_formatted}}</field>
<!--            <field name="partner_to">{{object.email}}</field>-->
            <field name="email_to">{{object.email}}</field>
            <field name="subject">Your Appointment Details</field>
            <field name="body_html" type="html">
                <div syle="margin: 0px; padding: 0px;">
                    <p style="font-size: 15px;">
                        Hello Dear <b><t t-esc="object.fname"/></b>
                        <br></br>
                        Mobile <b><t t-esc="object.mobile"/> </b><br></br>
                        this is Patient Detail page<br></br>
                        your appointment Date at <b><t t-esc="object.a_date"/><br></br></b>
                        Please come at time<br></br>
                        Thank You
                        <br></br>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="hospital_m.report_patient_details"/>
            <field name="report_name">report_patient_details {{(object.fname)}}</field>
        </record>
    </data>
</odoo>