<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="travel_management.list">
      <field name="name">travel_management list</field>
      <field name="model">travel_management.travel_management</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id" placeholder="enter id" use="required"/>
          <field name="name" widget="name" use="required"/>
          <field name="dob" />
          <field name="email" widget="email"/>
          <field name="mobileNo" widget="mobile" placeholder="Enter Mobile Number"/>
          <field name="maritialstatus"/>
<!--          <field name="city" />-->
<!--          <field name="boarding"/>-->
<!--          <field name="destination"/>-->
<!--          <field name="gender" options="{'horizontal':true}"/>-->
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="travel_management.form">
      <field name="name">travel_management form</field>
      <field name="model">travel_management.travel_management</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="id" placeholder="enter id" use="required"/>
            <field name="name" widget="name" use="required"/>
            <field name="dob" />
<!--            <sheet>-->
<!--              <field name="inherit_id" ref="base.view_partner_form"/>-->
             <field name="email" widget="email"/>
             <field name="mobileNo" widget="mobile" placeholder="Enter Mobile Number"/>
              <field name="maritialstatus" />
<!--            </sheet>-->
          <field name="city" />
          <field name="boarding"/>
          <field name="destination"/>
          <field name="gender" widget="radio" options="{'horizontal':true}"/>
          </group>
        </form>
      </field>
    </record>
<!--    &lt;!&ndash; actions opening views on models &ndash;&gt;-->

    <record model="ir.actions.act_window" id="travel_management.action_window">
      <field name="name">travel_management window</field>
      <field name="res_model">travel_management.travel_management</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="travel_management.action_server">
      <field name="name">travel_management server</field>
      <field name="model_id" ref="model_travel_management_travel_management"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="travel_management" id="travel_management.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="travel_management.menu_1" parent="travel_management.menu_root"/>
    <menuitem name="Menu 2" id="travel_management.menu_2" parent="travel_management.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="travel_management.menu_1_list" parent="travel_management.menu_1"
              action="travel_management.action_window"/>
    <menuitem name="Server to list" id="travel_management" parent="travel_management.menu_2"
              action="travel_management.action_server"/>

    <menuitem name="pop" id="tm_wizard" parent="travel_management.menu_2"
              action="travel_management_wiz_action_window"/>
  </data>
</odoo>
