                    </footer>
                </form>
            </field>
        </record>
        <record id="clg.added_wiz2" model="ir.actions.act_window">
            <field name="name">clg form2</field>
            <field name="res_model">wiz2.wiz2</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>