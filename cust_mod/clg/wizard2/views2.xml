<odoo>
    <data>
        <record model="ir.ui.view" id="clg_form2">
            <field name="name">clg form2</field>
            <field name="model">wiz2.wiz2</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="salary"/>
                    </group>
                    <footer>
                        <button name="%(clg.action_window)d" string="Print" type="action"/>
