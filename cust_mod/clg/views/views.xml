<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="clg_list">
            <field name="name">clg list</field>
            <field name="model">clg.clg</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="s_name"/>
                    <field name="s_rollno"/>
                    <field name="s_age"/>
                    <field name="s_mobile" widget="mobile"/>
                    <field name="s_email" widget="email"/>
                    <field name="s_image" widget="image" />
                    <field name="sex"/>
                    <!--                    <field name="dob"/>-->
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="clg_tree">
            <field name="name">clg tree</field>
            <field name="model">clg.clg</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="s_name" required="True"/>
                    <field name="s_rollno" required="True"/>
                    <field name="s_age" required="True"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="clg_form">
            <field name="name">clg form</field>
            <field name="model">clg.clg</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- Post -->
                        <field name="state" widget="statusbar" options="{'clickable':'2'}"
                               statusbar_visible="to_send,sent,to_cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="students" type="object" class="btn btn-primary"
                                    icon="fa-copy">
                                <!--                                <field name="stude" class="o_stat_value"/>-->
                                <!--                                <span class="o_sat_text">students</span>-->
                            </button>
                        </div>
                        <group>
                            <field name="s_name" required="True"/>
                            <field name="s_rollno" required="True"/>
                            <field name="s_age" required="True"/>
                            <field name="sex" required="True" widget="radio"/>
                            <field name="s_mobile" widget="mobile"/>
                            <field name="s_email" widget="email" required="True"/>
                        </group>
                        <notebook>
                            <page string="search" name="Search">
                                <group>
                                    <field name="mca"/>
                                </group>
                            </page>
                            <page string="celebrations" name="Celebrations">
                                <group>
                                    <field name="functions"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>

                    <sheet>
                        <group>

                            <field name="s_image" widget="image" />
                            <field name="sex"/>
                        </group>

                    </sheet>
                    <group>
                        <button name="print" string="submit data" data-hotkey="q" type="button"/>
                    </group>

                </form>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="clg.action_window">
            <field name="name">clg window</field>
            <field name="res_model">clg.clg</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->

        <record model="ir.actions.server" id="clg.action_server">
            <field name="name">clg server</field>
            <field name="model_id" ref="model_clg_clg"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>


        <!-- Top menu item -->

        <menuitem name="clg" id="clg.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="clg.menu_1" parent="clg.menu_root"/>
        <menuitem name="Menu 2" id="clg.menu_2" parent="clg.menu_root"/>

        <!-- actions -->

        <menuitem name="List" id="clg.menu_1_list" parent="clg.menu_1"
                  action="clg.action_window"/>
        <menuitem name="Server to list" id="clg" parent="clg.menu_2"
                  action="clg.action_server"/>

        <menuitem name="wizzz" id="menu_3" parent="clg.menu_root"
                  action="clg_added_wiz"/>
        <menuitem name="wizard2" id="menu34" parent="clg.menu_2"
                  action="clg.added_wiz2"/>

    </data>
</odoo>